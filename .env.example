# SSO Configuration
VITE_SSO_ENABLED=true

# Google SSO
VITE_GOOGLE_CLIENT_ID=your_google_client_id          # Public: Available in frontend
GOOGLE_CLIENT_SECRET=your_google_client_secret       # Private: Server-side only

# Microsoft SSO
VITE_MICROSOFT_CLIENT_ID=your_microsoft_client_id    # Public: Available in frontend
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret  # Private: Server-side only

# Okta SSO
VITE_OKTA_CLIENT_ID=your_okta_client_id             # Public: Available in frontend
VITE_OKTA_DOMAIN=your-domain.okta.com               # Public: Available in frontend
VITE_OKTA_AUTH_ENDPOINT=https://{your-domain}.okta.com/oauth2/default/v1/authorize  # Public: Available in frontend
OKTA_CLIENT_SECRET=your_okta_client_secret          # Private: Server-side only
OKTA_TOKEN_ENDPOINT=https://{your-domain}.okta.com/oauth2/default/v1/token          # Private: Server-side only
